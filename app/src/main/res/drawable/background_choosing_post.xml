<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/negative_empty_background_color"
                android:width="1dp"/>
            <corners android:radius="80dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/negative_empty_background_color"
                android:width="1dp"/>
            <corners android:radius="80dp" />
            <gradient android:startColor="@color/main_light_color2"
                android:endColor="@color/main_dark_color2"
                android:angle="-45"/>
        </shape>
    </item>
</selector>