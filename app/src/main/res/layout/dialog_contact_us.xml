<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="@dimen/extra_large_margin"
        android:src="@drawable/logo_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_call_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/extra_large_margin"
        android:layout_marginTop="@dimen/extra_large_margin"
        android:layout_marginEnd="@dimen/extra_large_margin"
        android:layout_marginBottom="@dimen/short_margin"
        android:fontFamily="@font/iransans"
        android:padding="@dimen/short_text_view_padding"
        android:text="@string/call_backup"
        android:textColor="@color/negative_normal_text_color"
        android:textSize="@dimen/normal_text_size"
        android:theme="@style/Theme.Melkist.Buttons"
        app:layout_constraintTop_toBottomOf="@id/img_logo" />

    <Button
        android:id="@+id/btn_our_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/extra_large_margin"
        android:layout_marginTop="@dimen/short_margin"
        android:layout_marginEnd="@dimen/extra_large_margin"
        android:layout_marginBottom="@dimen/extra_large_margin"
        android:fontFamily="@font/iransans"
        android:padding="@dimen/short_text_view_padding"
        android:text="@string/our_site"
        android:textColor="@color/negative_normal_text_color"
        android:textSize="@dimen/normal_text_size"
        android:theme="@style/Theme.Melkist.Buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_call_backup" />

</androidx.constraintlayout.widget.ConstraintLayout>