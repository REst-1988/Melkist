<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.add.AddP2ChooseTypeFrag">

    <data>

        <variable
            name="viewmodel"
            type="com.example.melkist.viewmodels.AddItemViewModel" />

        <variable
            name="fragment"
            type="com.example.melkist.views.add.AddP2ChooseTypeFrag" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layoutDirection="rtl"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <!--app:layout_scrollFlags="scroll|enterAlways"-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/background_tool_bar">

                    <ImageButton
                        android:id="@+id/ibtn_back"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:onClick="@{() -> fragment.back()}"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="?attr/actionBarSize"
                        android:fontFamily="@font/byekan"
                        android:gravity="center_vertical"
                        android:text="@string/choose_type_title"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ibtn_back"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="@string/choose_type_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/layout_real_estate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/large_margin"
            android:background="@drawable/background_choosing_post"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> fragment.setItemType(viewmodel.ItemType.SEEKER)}"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_real_estate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/normal_margin"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_seeker" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_real_estate_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:padding="@dimen/short_padding"
                    android:text="@string/choosing_seeker_header"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/txt_size_h2" />

                <TextView
                    android:id="@+id/txt_real_estate_header_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:fontFamily="@font/byekan"
                    android:paddingStart="@dimen/short_padding"
                    android:paddingEnd="@dimen/short_padding"
                    android:text="@string/choosing_seeker_header2"
                    android:textColor="@color/sub_item_text_color"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/txt_real_estate_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:fontFamily="@font/byekan"
                    android:lineSpacingExtra="4sp"
                    android:paddingStart="@dimen/short_padding"
                    android:paddingEnd="@dimen/short_padding"
                    android:paddingBottom="@dimen/normal_padding"
                    android:text="@string/choosing_seeker_body"
                    android:textColor="@color/sub_item_text_color"
                    tools:ignore="UnusedAttribute" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginEnd="@dimen/large_margin"
            android:background="@drawable/background_choosing_post"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> fragment.setItemType(viewmodel.ItemType.OWNER)}"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_normal_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/normal_margin"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_owner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:padding="@dimen/short_padding"
                    android:text="@string/choosing_owner_header"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/txt_size_h2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:fontFamily="@font/byekan"
                    android:paddingStart="@dimen/short_padding"
                    android:paddingEnd="@dimen/short_padding"
                    android:text="@string/choosing_owner_header2"
                    android:textColor="@color/sub_item_text_color"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:fontFamily="@font/byekan"
                    android:lineSpacingExtra="4sp"
                    android:paddingStart="@dimen/short_padding"
                    android:paddingEnd="@dimen/short_padding"
                    android:paddingBottom="@dimen/normal_padding"
                    android:text="@string/choosing_owner_body"
                    android:textColor="@color/sub_item_text_color"
                    tools:ignore="UnusedAttribute" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>