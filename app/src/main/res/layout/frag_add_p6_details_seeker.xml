<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.add.AddP6DetailsSeekerFrag">

    <data>

        <variable
            name="viewmodel"
            type="com.example.melkist.viewmodels.AddItemViewModel" />

        <variable
            name="fragment"
            type="com.example.melkist.views.add.AddP6DetailsSeekerFrag" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <!--app:layout_scrollFlags="scroll|enterAlways"-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/background_tool_bar">

                    <ImageButton
                        android:id="@+id/ibtn_back"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:onClick="@{() -> fragment.back()}"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="?attr/actionBarSize"
                        android:fontFamily="@font/byekan"
                        android:gravity="center_vertical"
                        android:text="@string/add_detail_page_title"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ibtn_back"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="@string/add_detail_page_title" />

                    <ImageButton
                        android:id="@+id/ibtn_cancel"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:onClick="@{() -> fragment.cancel()}"
                        android:src="@drawable/ic_baseline_close_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/app_bar"
            android:fillViewport="true"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/normal_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_choose_measurement_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/byekan"
                        android:gravity="start|center"
                        android:padding="@dimen/normal_padding"
                        android:text="@string/measurement"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/short_margin"
                        android:fontFamily="@font/byekan"
                        android:gravity="start|center"
                        android:padding="@dimen/normal_padding"
                        android:text="@string/from"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_text_size" />

                    <NumberPicker
                        android:id="@+id/npicker_measure_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/short_margin"
                        android:fontFamily="@font/byekan"
                        android:gravity="start|center"
                        android:padding="@dimen/normal_padding"
                        android:text="@string/to"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_text_size" />

                    <NumberPicker
                        android:id="@+id/npicker_measure_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/spacer_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_boarder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_choose_room_no_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/byekan"
                        android:gravity="start|center"
                        android:padding="@dimen/normal_padding"
                        android:text="@string/room_no"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_text_size" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <NumberPicker
                        android:id="@+id/npicker_room_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/spacer_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_boarder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_choose_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/byekan"
                        android:gravity="start|center"
                        android:padding="@dimen/normal_padding"
                        android:text="@string/price"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_text_size" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/short_margin"
                        android:fontFamily="@font/byekan"
                        android:gravity="start|center"
                        android:padding="@dimen/normal_padding"
                        android:text="@string/from"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_text_size" />

                    <NumberPicker
                        android:id="@+id/npicker_price_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/short_margin"
                        android:fontFamily="@font/byekan"
                        android:gravity="start|center"
                        android:padding="@dimen/normal_padding"
                        android:text="@string/to"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/normal_text_size" />

                    <NumberPicker
                        android:id="@+id/npicker_price_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/spacer_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_boarder" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/et_descriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_edit_text"
                        android:fontFamily="@font/byekan"
                        android:hint="@string/descriptions"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:singleLine="false"
                        android:textColor="@color/edit_text_text_color"
                        android:textDirection="rtl"
                        android:textSize="@dimen/normal_text_size"  />
                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_commit"
                        style="@style/Theme.Melkist.Buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/normal_margin"
                        android:fontFamily="@font/byekan"
                        android:onClick="@{() -> fragment.onCommit()}"
                        android:text="@string/commit"
                        android:textDirection="rtl"
                        app:bindLoading="@{viewmodel.status}"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:layout_marginTop="@dimen/normal_margin"
                        android:layout_marginEnd="@dimen/normal_margin"
                        android:layout_marginBottom="@dimen/normal_margin"
                        app:bindProgressLoading="@{viewmodel.status}"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </RelativeLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>