<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    tools:context=".views.calculator.dialog.CalculatorResultExpertDialogFrag">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransans"
            android:gravity="center"
            android:padding="@dimen/text_view_padding"
            android:text="@string/calculator_expert_dialog_title"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/normal_text_size" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_title"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/layout_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iransans"
                android:gravity="center"
                android:padding="@dimen/text_view_padding"
                android:text="@string/expert_evaluation_house_price"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/normal_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fake"
                    android:layout_width="@dimen/rounded_btns"
                    android:layout_height="@dimen/rounded_btns"
                    android:layout_marginStart="@dimen/short_margin"
                    android:layout_marginEnd="@dimen/short_margin" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/short_margin"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_house_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iransans"
                        android:gravity="center"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/txt_size_h1"
                        tools:text="12,000,000,000 تومان" />

                    <TextView
                        android:id="@+id/txt_house_price_to_letter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iransans"
                        android:gravity="center"
                        android:textColor="@color/sub_item_text_color"
                        android:textSize="@dimen/short_text_size"
                        tools:text="12 میلیارد" />

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/short_margin"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/ibtn_result_copy"
                    android:layout_width="@dimen/rounded_btns"
                    android:layout_height="@dimen/rounded_btns"
                    android:layout_marginStart="@dimen/short_margin"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_content_copy_24" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iransans"
                android:gravity="center"
                android:padding="@dimen/text_view_padding"
                android:text="@string/expert_evaluation_house_price_per_meter"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/normal_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fake_2"
                    android:layout_width="@dimen/rounded_btns"
                    android:layout_height="@dimen/rounded_btns"
                    android:layout_marginStart="@dimen/short_margin"
                    android:layout_marginEnd="@dimen/short_margin" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/short_margin"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_house_per_meter_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iransans"
                        android:gravity="center"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/txt_size_h1"
                        tools:text="12,000,000" />

                    <TextView
                        android:id="@+id/txt_house_price_per_meter_to_letter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iransans"
                        android:gravity="center"
                        android:textColor="@color/sub_item_text_color"
                        android:textSize="@dimen/short_text_size"
                        tools:text="12 میلیارد" />

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/short_margin"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/ibtn_result_copy_per_meter"
                    android:layout_width="@dimen/rounded_btns"
                    android:layout_height="@dimen/rounded_btns"
                    android:layout_marginStart="@dimen/short_margin"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_content_copy_24" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iransans"
                android:gravity="center"
                android:padding="@dimen/text_view_padding"
                android:text="@string/expert_evaluation_rent_price"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/normal_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fake_3"
                    android:layout_width="@dimen/rounded_btns"
                    android:layout_height="@dimen/rounded_btns"
                    android:layout_marginStart="@dimen/short_margin"
                    android:layout_marginEnd="@dimen/short_margin" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/short_margin"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_rent_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iransans"
                        android:gravity="center"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/txt_size_h1"
                        tools:text="12,000,000" />

                    <TextView
                        android:id="@+id/txt_rent_price_to_letter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iransans"
                        android:gravity="center"
                        android:textColor="@color/sub_item_text_color"
                        android:textSize="@dimen/short_text_size"
                        tools:text="12 میلیارد" />

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/short_margin"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/ibtn_result_copy_rent"
                    android:layout_width="@dimen/rounded_btns"
                    android:layout_height="@dimen/rounded_btns"
                    android:layout_marginStart="@dimen/short_margin"
                    android:layout_marginEnd="@dimen/short_margin"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_content_copy_24" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:background="?selectableItemBackgroundBorderless"
        android:fontFamily="@font/iransans"
        android:text="@string/close"
        android:textColor="@color/custom_dialog_button_color"
        android:textSize="@dimen/normal_text_size" />

</RelativeLayout>