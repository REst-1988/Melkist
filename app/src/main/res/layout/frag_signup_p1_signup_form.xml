<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.login.signup.SignupP1SignupFormFrag">

    <data>

        <variable
            name="viewmodel"
            type="com.example.melkist.viewmodels.SignupViewModel" />

        <variable
            name="fragment"
            type="com.example.melkist.views.login.signup.SignupP1SignupFormFrag" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layoutDirection="rtl"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <!--app:layout_scrollFlags="scroll|enterAlways"-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/background_tool_bar">

                    <ImageButton
                        android:id="@+id/ibtn_cancel"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:onClick="@{() -> fragment.cancel()}"
                        android:src="@drawable/ic_baseline_close_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="?attr/actionBarSize"
                        android:fontFamily="@font/iransans"
                        android:gravity="center_vertical"
                        android:text="@string/signup"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_h1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ibtn_cancel"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="ثبت نام" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/app_bar"
            android:fillViewport="true"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--layout getting general information-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">
                    <!--1 choosing real estate user-->
                    <LinearLayout
                        android:id="@+id/ll_choose_realestate_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> fragment.onChoosingRealStateUser()}"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_choose_realestate_user_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iransans"
                            android:gravity="start|center"
                            android:padding="@dimen/text_view_padding"
                            android:text="@string/choose_realestate_user_title"
                            android:textColor="@color/negative_empty_background_color"
                            android:textSize="@dimen/normal_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/txt_choose_realestate_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iransans"
                            android:gravity="end|center"
                            android:padding="@dimen/text_view_padding"
                            android:text="@{fragment.showConditionText()}"
                            android:textColor="@color/negative_empty_background_color_sub_item"
                            android:textSize="@dimen/normal_text_size"
                            tools:text="@string/choose" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/spacer_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_boarder" />
                    <!--2 choosing category-->
                    <LinearLayout
                        android:id="@+id/ll_choose_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> fragment.onChoosingCategory()}"
                        android:orientation="horizontal"
                        app:setVisibility="@{fragment.isShowCategory()}">

                        <TextView
                            android:id="@+id/txt_choose_category_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iransans"
                            android:gravity="start|center"
                            android:padding="@dimen/text_view_padding"
                            android:text="@string/choose_category_title"
                            android:textColor="@color/negative_empty_background_color"
                            android:textSize="@dimen/normal_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/txt_choose_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iransans"
                            android:gravity="end|center"
                            android:padding="@dimen/text_view_padding"
                            android:text="@{fragment.showCategoryText()}"
                            android:textColor="@color/negative_empty_background_color_sub_item"
                            android:textSize="@dimen/normal_text_size"
                            tools:text="@string/choose" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/spacer_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_boarder"
                        app:setVisibility="@{fragment.isShowCategory()}" />
                    <!--3 choosing province-->
                    <LinearLayout
                        android:id="@+id/ll_choose_province"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> fragment.onChoosingProvince()}"
                        android:orientation="horizontal"
                        app:setVisibility="@{fragment.isShowProvince()}">

                        <TextView
                            android:id="@+id/txt_choose_province_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iransans"
                            android:gravity="start|center"
                            android:padding="@dimen/text_view_padding"
                            android:text="@string/choose_province_title"
                            android:textColor="@color/negative_empty_background_color"
                            android:textSize="@dimen/normal_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/txt_choose_province"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iransans"
                            android:gravity="end|center"
                            android:padding="@dimen/text_view_padding"
                            android:text="@{viewmodel.provinceTitle.isEmpty()? @string/choose : viewmodel.provinceTitle}"
                            android:textColor="@color/negative_empty_background_color_sub_item"
                            android:textSize="@dimen/normal_text_size"
                            tools:text="@string/choose" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/spacer_3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_boarder"
                        app:setVisibility="@{fragment.isShowProvince()}" />
                    <!--4 choosing city-->
                    <LinearLayout
                        android:id="@+id/ll_choose_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> fragment.onChoosingCity()}"
                        android:orientation="horizontal"
                        app:setVisibility="@{fragment.isShowCity()}">

                        <TextView
                            android:id="@+id/txt_choose_city_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iransans"
                            android:gravity="start|center"
                            android:padding="@dimen/text_view_padding"
                            android:text="@string/choose_city_title"
                            android:textColor="@color/negative_empty_background_color"
                            android:textSize="@dimen/normal_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/txt_choose_city"
                            android:layout_width="wrap_content"
                            android:layout_height="67dp"
                            android:fontFamily="@font/iransans"
                            android:gravity="end|center"
                            android:padding="@dimen/text_view_padding"
                            android:text="@{viewmodel.cityTitle.isEmpty()? @string/choose : viewmodel.cityTitle}"
                            android:textColor="@color/negative_empty_background_color_sub_item"
                            android:textSize="@dimen/normal_text_size"
                            tools:text="@string/choose" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/spacer_4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_boarder"
                        app:setVisibility="@{fragment.isShowCity()}" />
                    <!--5 choosing real estate-->
                    <LinearLayout
                        android:id="@+id/ll_choose_real_estate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> fragment.onChoosingRealEstate()}"
                        android:orientation="horizontal"
                        app:setVisibility="@{fragment.isShowRealEstate()}">

                        <TextView
                            android:id="@+id/txt_choose_real_estate_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iransans"
                            android:gravity="start|center"
                            android:padding="@dimen/text_view_padding"
                            android:text="@string/choose_real_estate_title"
                            android:textColor="@color/negative_empty_background_color"
                            android:textSize="@dimen/normal_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/txt_choose_real_estate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iransans"
                            android:gravity="end|center"
                            android:padding="@dimen/text_view_padding"
                            android:text="@{viewmodel.realEstateTitle.isEmpty()? @string/choose : viewmodel.realEstateTitle}"
                            android:textColor="@color/negative_empty_background_color_sub_item"
                            android:textSize="@dimen/normal_text_size"
                            tools:text="@string/choose" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/spacer_5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_boarder"
                        app:setVisibility="@{fragment.isShowRealEstate()}" />
                    <!--6 choosing supervisor-->
                    <LinearLayout
                        android:id="@+id/ll_choose_supervisor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> fragment.onChoosingSupervisor()}"
                        android:orientation="horizontal"
                        app:setVisibility="@{fragment.isShowSupervisor()}">

                        <TextView
                            android:id="@+id/txt_choose_supervisor_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iransans"
                            android:gravity="start|center"
                            android:padding="@dimen/text_view_padding"
                            android:text="@string/choose_supervisor_title"
                            android:textColor="@color/negative_empty_background_color"
                            android:textSize="@dimen/normal_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/txt_choose_supervisor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iransans"
                            android:gravity="end|center"
                            android:padding="@dimen/text_view_padding"
                            android:text="@{viewmodel.supervisorTitle.isEmpty()? @string/choose : viewmodel.supervisorTitle}"
                            android:textColor="@color/negative_empty_background_color_sub_item"
                            android:textSize="@dimen/normal_text_size"
                            tools:text="@string/choose" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/spacer_6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_boarder"
                        app:setVisibility="@{fragment.isShowSupervisor()}" />
                </LinearLayout>
                <!--layout getting detail-->
                <LinearLayout
                    android:id="@+id/ll_getting_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:setVisibility="@{fragment.isShowOtherFields()}">
                    <!--real estate field-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_real_estate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginBottom="@dimen/short_margin"
                            android:src="@drawable/ic_baseline_house_siding_24"
                            app:setVisibility="@{fragment.isManager()}" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_real_estate_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginEnd="@dimen/normal_margin"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:errorEnabled="true"
                            app:setVisibility="@{fragment.isManager()}">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_edit_text"
                                android:fontFamily="@font/iransans"
                                android:hint="@string/hint_real_estate"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:textColor="@color/edit_text_text_color"
                                android:textDirection="rtl"
                                android:textSize="@dimen/normal_text_size" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <!--first name-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginBottom="@dimen/short_margin"
                            android:src="@drawable/ic_baseline_person_outline_24" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginEnd="@dimen/normal_margin"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_edit_text"
                                android:fontFamily="@font/iransans"
                                android:hint="@string/hint_first_name"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:textColor="@color/edit_text_text_color"
                                android:textDirection="rtl"
                                android:textSize="@dimen/normal_text_size" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <!--last name-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginBottom="@dimen/short_margin"
                            android:src="@drawable/ic_baseline_people_24" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginEnd="@dimen/normal_margin"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_edit_text"
                                android:fontFamily="@font/iransans"
                                android:hint="@string/hint_last_name"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:textColor="@color/edit_text_text_color"
                                android:textDirection="rtl"
                                android:textSize="@dimen/normal_text_size" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <!--mobile-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_phone_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginBottom="@dimen/short_margin"
                            android:src="@drawable/ic_baseline_phone_24" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_phone_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginEnd="@dimen/normal_margin"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_edit_text"
                                android:fontFamily="@font/iransans"
                                android:hint="@string/hint_phone_no"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:maxLength="11"
                                android:textColor="@color/edit_text_text_color"
                                android:textDirection="rtl"
                                android:textSize="@dimen/normal_text_size" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <!--national code-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_national_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginBottom="@dimen/short_margin"
                            android:src="@drawable/ic_baseline_world_24" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_national_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginEnd="@dimen/normal_margin"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_edit_text"
                                android:fontFamily="@font/iransans"
                                android:hint="@string/hint_national_code"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="10"
                                android:textColor="@color/edit_text_text_color"
                                android:textDirection="rtl"
                                android:textSize="@dimen/normal_text_size" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <!--birth date-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/icon_birth_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/normal_margin"
                                android:layout_marginBottom="@dimen/short_margin"
                                android:src="@drawable/baseline_date_range_24" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/et_birth_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/normal_margin"
                                android:layout_marginEnd="@dimen/normal_margin"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                app:errorEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/background_edit_text"
                                    android:fontFamily="@font/iransans"
                                    android:hint="@string/hint_birth_date"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:textColor="@color/edit_text_text_color"
                                    android:textDirection="rtl"
                                    android:textSize="@dimen/normal_text_size" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:clickable="true"
                            android:elevation="2dp"
                            android:focusable="true"
                            android:onClick="@{()-> fragment.onDateClick()}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--national email-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginBottom="@dimen/short_margin"
                            android:src="@drawable/ic_baseline_email_24" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginEnd="@dimen/normal_margin"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_edit_text"
                                android:fontFamily="@font/iransans"
                                android:hint="@string/hint_email"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/edit_text_text_color"
                                android:textDirection="rtl"
                                android:textSize="@dimen/normal_text_size" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <!--password-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginBottom="@dimen/short_margin"
                            android:src="@drawable/ic_baseline_lock_24" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginEnd="@dimen/normal_margin"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:endIconCheckable="true"
                            app:endIconDrawable="@drawable/ic_baseline_remove_red_eye_24"
                            app:endIconMode="password_toggle"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_edit_text"
                                android:fontFamily="@font/iransans"
                                android:hint="@string/hint_password_signup"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:textColor="@color/edit_text_text_color"
                                android:textDirection="rtl"
                                android:textSize="@dimen/normal_text_size" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/bti_commit"
                            style="@style/Theme.Melkist.Buttons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/normal_margin"
                            android:fontFamily="@font/iransans"
                            android:onClick="@{() -> fragment.onCommit()}"
                            android:text="@string/commit"
                            app:bindLoading="@{viewmodel.status}" />

                        <ProgressBar
                            android:id="@+id/progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/normal_margin"
                            app:bindProgressLoading="@{viewmodel.status}"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>