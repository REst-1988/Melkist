<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="data"
            type="com.example.melkist.models.RegionResponseData" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/byekan"
            android:gravity="center_vertical"
            android:padding="@dimen/short_padding"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/txt_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt"
            android:fontFamily="@font/byekan"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/short_padding"
            android:paddingStart="@dimen/short_padding"
            android:paddingEnd="@dimen/short_padding"
            android:textColor="@color/sub_item_text_color"
            android:textSize="@dimen/normal_text_size" />

    </RelativeLayout>
</layout>