<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/short_margin"
    android:paddingTop="@dimen/short_padding"
    android:paddingBottom="@dimen/short_padding"
    android:layoutDirection="rtl"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        tools:text="1"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/very_short_text_size" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.3"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        tools:text="@string/my_name"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/very_short_text_size" />

    <TextView
        android:id="@+id/txt_file_creation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/super_short_text_size"
        tools:text="15" />

    <TextView
        android:id="@+id/txt_visit_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        tools:text="8"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/super_short_text_size" />

    <TextView
        android:id="@+id/txt_meeting_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        tools:text="2"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/very_short_text_size" />

    <TextView
        android:id="@+id/txt_contract_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        tools:text="1"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/very_short_text_size" />

    <TextView
        android:id="@+id/txt_consult_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        tools:text="1"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/very_short_text_size" />

    <TextView
        android:id="@+id/txt_sum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        tools:text="27"
        android:textColor="@color/deep_red"
        android:textSize="@dimen/very_short_text_size" />

</LinearLayout>

