<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Melkist" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <!--<item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:typeface">serif</item>
    </style>

    <style name="Theme.Melkist.splash" parent="Theme.Melkist">
        <item name="colorPrimaryVariant">@android:color/black</item>
    </style>

    <style name="Theme.Melkist.Buttons" parent="Theme.Melkist">
        <item name="colorPrimary">@color/custom_button_color</item>
    </style>

    <style name="dialog_theme" parent="android:style/Theme.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:background">@color/empty_background_color</item>
        <item name="android:windowBackground">@color/empty_background_color</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textColor">@color/sub_item_text_color</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>

</resources>